# Copy to .env and adjust for your local DB. Do not commit .env.

# Flyway docker image to run.
FLYWAY_IMAGE=flyway/flyway:10

# Connection settings (example is Postgres on the host).
# On Windows/macOS Docker Desktop, host.docker.internal resolves to your host.
FLYWAY_URL=jdbc:postgresql://host.docker.internal:5432/app
FLYWAY_USER=postgres
FLYWAY_PASSWORD=postgres

# Optional common settings
FLYWAY_SCHEMAS=public
FLYWAY_CONNECT_RETRIES=10

# Optional: if your database runs in Docker/Compose, set this to the network
# name so the Flyway container can reach the DB by service name.
# Example: FLYWAY_DOCKER_NETWORK=app_default
FLYWAY_DOCKER_NETWORK=
